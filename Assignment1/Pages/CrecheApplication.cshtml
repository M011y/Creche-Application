@page
@model Assignment.Pages.CrecheApplicationModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "CrecheApplication";
}

<h2>Creche Application</h2>

<form method="post">

    @*ask for child properties first name, last name, PPS num, DOB, gender, hours requested, days requested,
        starting date*@

    <h3>Please fill in your childs details</h3>

    <div>
        <label asp-for=Child.FirstName></label>
        <input asp-for=Child.FirstName>
    </div>

    <div>
        <label asp-for=Child.LastName></label>
        <input asp-for=Child.LastName>
    </div>

    <div>
        <label asp-for=Child.PPSN></label>
        <input asp-for=Child.PPSN>
    </div>

    <div>
        <label asp-for=Child.DOB></label>
        <input asp-for=Child.DOB>
    </div>

    <div>
        <label asp-for=Child.Gender></label>
        <input asp-for=Child.Gender>
    </div>

    <div>Full or Part-Time </div>
    <div>
        <select asp-for="Child.Hours" asp-items=Model.HoursList></select>
    </div>

    <fieldset>

        <legend>Days attending</legend>

        @for (int i = 0; i < Model.Days.Length; i++)
        {
            <input asp-for="Days[i]" />
            <label asp-for="Days[i]">@Model.DayList[i]</label>
        }

    </fieldset>

    <div>
        <label asp-for=Child.StartDate></label>
        <input asp-for=Child.StartDate>
    </div>

    @*ask for parent properties First Name, Surname, relationship to child, address, Irish mobile num,
        //second contact num, other contact num, e-mail address, 2nd e-mail address*@

    <h3>Please fill in your own details</h3>

    <div>
        <label asp-for=Parent.FirstName></label>
        <input asp-for=Parent.FirstName>
    </div>

    <div>
        <label asp-for=Parent.LastName></label>
        <input asp-for=Parent.LastName>
    </div>

    <div>Relationship to child </div>
    <div>
        <select asp-for="Parent.Relationship" asp-items=Model.RelationshipList></select>
    </div>

    <div>
        <label asp-for=Parent.Address></label>
        <input asp-for=Parent.Address>
    </div>

    <div>
        <label asp-for=Parent.Mobile></label>
        <input asp-for=Parent.Mobile>
    </div>

    <div>
        <label asp-for=Parent.Phone1></label>
        <input asp-for=Parent.Phone1>
    </div>

    <div>
        <label asp-for=Parent.Phone2></label>
        <input asp-for=Parent.Phone2>
    </div>

    <button type="submit">Submit</button>
</form>